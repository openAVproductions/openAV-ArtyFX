@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix epp: <http://lv2plug.in/ns/ext/port-props#> .
@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.
@prefix pprop:  <http://lv2plug.in/ns/ext/port-props#>.

<http://www.openavproductions.com/artyfx#friza/gui>
  a ui:X11UI;
  ui:binary <artyfx.so>;
  lv2:optionalFeature ui:noUserResize ;
  lv2:extensionData   ui:idleInterface .

<http://www.openavproductions.com/artyfx#friza>
  a lv2:Plugin;
  doap:name "Friza";
  doap:description "Sonic-Freezer";
  doap:maintainer  [
      foaf:homepage <http://openavproductions.com>;
      foaf:mbox <mailto:harryhaaren@gmail.com>;
      foaf:name "OpenAV"
  ];
  lv2:optionalFeature lv2:hardRTCapable ;

  rdfs:comment "A sonic texture freezer that allows moving over recorded content to achieve an ambient fade effect.";
  lv2:minorVersion 2; lv2:microVersion 0;
  doap:license <http://usefulinc.com/doap/licenses/gpl> ;
  lv2:project <http://www.openavproductions.com/artyfx> ;


  ui:ui <http://www.openavproductions.com/artyfx#friza/gui>;

  lv2:port [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 0 ;
    lv2:symbol "in_left" ;
    lv2:name "In Left";
  ] , [
    a lv2:AudioPort ,
      lv2:OutputPort ;
    lv2:index 1 ;
    lv2:symbol "out_left" ;
    lv2:name "Output Left";
  ]

  ,

  [
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 2 ;
    lv2:symbol "do_it" ;
    lv2:name "Do It!";
    lv2:default 0.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
  ] , [
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 3 ;
    lv2:symbol "length" ;
    lv2:name "Length";
    lv2:default 0.5 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
  ] , [
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 4 ;
    lv2:symbol "position" ;
    lv2:name "Position";
    lv2:default 0.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
  ] , [
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 5 ;
    lv2:symbol "volume" ;
    lv2:name "Volume";
    lv2:default 0.5 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
  ]
  .
