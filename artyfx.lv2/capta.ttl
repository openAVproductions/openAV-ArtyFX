@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix epp: <http://lv2plug.in/ns/ext/port-props#> .
@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.
@prefix mod: <http://portalmod.com/ns/modgui#>.
@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix midi:  <http://lv2plug.in/ns/ext/midi#> .
@prefix urid:  <http://lv2plug.in/ns/ext/urid#> .

<http://www.openavproductions.com/artyfx#capta/gui>
  a ui:X11UI;
  ui:binary <artyfx.so>;
  lv2:optionalFeature ui:noUserResize ;
  lv2:extensionData   ui:idleInterface ;
  ui:requiredFeature ui:makeResident.

<http://www.openavproductions.com/artyfx#capta>
  a lv2:Plugin;
  
  doap:name "Capta" ;
  doap:description "4-track recorder";
  
  lv2:requiredFeature urid:map ;
  
  ui:ui <http://www.openavproductions.com/artyfx#capta/gui>;
  
  lv2:optionalFeature lv2:hardRTCapable ;
  
  doap:developer  [
      foaf:homepage <http://openavproductions.com/artyfx#capta>; 
      foaf:mbox <mailto:harryhaaren@gmail.com>;
      foaf:name "OpenAV"
  ];
  doap:maintainer [ 
      foaf:homepage <http://openavproductions.com/artyfx#capta>; 
      foaf:mbox <mailto:harryhaaren@gmail.com>;
      foaf:name "OpenAV"
  ];

  rdfs:comment """
  Capta is a 4 track recording plugin. It streams the incoming audio to a file
  in the users home dir using a time-stamp as the filename.
  Author  : Harry van Haaren   <harryhaaren@gmail.com>
            OpenAV Productions <openavproductions.com>
  """;
  
  lv2:port [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 0 ;
    lv2:symbol "input_1" ;
    lv2:name "Input 1";
  ] , [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 1 ;
    lv2:symbol "input_2" ;
    lv2:name "Input 2";
  ] , [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 2 ;
    lv2:symbol "input_3" ;
    lv2:name "Input 3";
  ] , [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 3 ;
    lv2:symbol "input_4" ;
    lv2:name "Input 4";
  ]
  
  ,
  
  [
    a lv2:ControlPort ,
      lv2:InputPort ;
    lv2:index 4 ;
    lv2:symbol "record" ;
    lv2:name "Record";
    lv2:default 0.000000 ;
    lv2:minimum 0.000000 ;
    lv2:maximum 1.000000 ;
    lv2:portProperty lv2:integer, lv2:toggled;
  ]
  
  .
  
