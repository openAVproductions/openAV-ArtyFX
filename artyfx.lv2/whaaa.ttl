@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix epp: <http://lv2plug.in/ns/ext/port-props#> .
@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.

@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.
@prefix time: <http://lv2plug.in/ns/ext/time#> .

<http://www.openavproductions.com/artyfx#whaaa/gui>
  a ui:X11UI;
  ui:binary <artyfx_ui.so>;
  lv2:optionalFeature ui:noUserResize ;
  lv2:extensionData   ui:idleInterface ;
  ui:requiredFeature ui:makeResident.

<http://www.openavproductions.com/artyfx#whaaa>
  a lv2:Plugin;
  
  doap:name "Whaaa";
  doap:description "Wah Pedal";
  doap:maintainer  [
      foaf:homepage <http://openavproductions.com>; 
      foaf:mbox <mailto:harryhaaren@gmail.com>;
      foaf:name "OpenAV"
  ];
  lv2:optionalFeature lv2:hardRTCapable ;
  rdfs:comment "A wah pedal emulation.";
  lv2:minorVersion 2; lv2:microVersion 0;
  doap:license <http://usefulinc.com/doap/licenses/gpl> ;
  lv2:project <http://www.openavproductions.com/artyfx> ;


  ui:ui <http://www.openavproductions.com/artyfx#whaaa/gui>;
  
  lv2:requiredFeature <http://lv2plug.in/ns/ext/urid#map> ;

  lv2:port [
      a lv2:InputPort, lv2:AudioPort ;
      lv2:index 0 ;
      lv2:symbol "inputL" ;
      lv2:name "Audio Input L" ;
  ] , [
      a lv2:OutputPort, lv2:AudioPort ;
      lv2:index 1 ;
      lv2:symbol "outputL" ;
      lv2:name "Audio Output Left" ;
  ] , [
      a lv2:InputPort, lv2:ControlPort ;
      lv2:index 2 ;
      lv2:name "Freq" ;
      lv2:symbol "freq" ;
      lv2:default 0.500000 ;
      lv2:minimum 0.000000 ;
      lv2:maximum 1.000000 ;
  ] , [
      a lv2:InputPort, lv2:ControlPort ;
      lv2:index 3 ;
      lv2:name "Range" ;
      lv2:symbol "range" ;
      lv2:default 0.250000 ;
      lv2:minimum 0.000000 ;
      lv2:maximum 1.000000 ;
  ] , [
      a lv2:InputPort, lv2:ControlPort ;
      lv2:index 4 ;
      lv2:name "Drive" ;
      lv2:symbol "drive" ;
      lv2:default 0.500000 ;
      lv2:minimum 0.000000 ;
      lv2:maximum 1.000000 ;
  ] , [
      a lv2:InputPort, lv2:ControlPort ;
      lv2:index 5 ;
      lv2:name "Mix" ;
      lv2:symbol "mix" ;
      lv2:default 0.500000 ;
      lv2:minimum 0.000000 ;
      lv2:maximum 1.000000 ;
  ]
.
