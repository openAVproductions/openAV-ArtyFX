@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix epp: <http://lv2plug.in/ns/ext/port-props#> .
@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.

@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.
@prefix time: <http://lv2plug.in/ns/ext/time#> .

<http://www.openavproductions.com/artyfx#vihda/gui>
  a ui:X11UI;
  ui:binary <artyfx.so>;
  lv2:optionalFeature ui:noUserResize ;
  lv2:extensionData   ui:idleInterface ;
  ui:requiredFeature ui:makeResident.

<http://www.openavproductions.com/artyfx#vihda>
  a lv2:Plugin;
  
  doap:name "Vihda";
  doap:description "Stereo Widener";
  doap:maintainer [ foaf:name "OpenAV Productions" ] ;
  lv2:optionalFeature lv2:hardRTCapable ;
  
  ui:ui <http://www.openavproductions.com/artyfx#vihda/gui>;
  
  lv2:requiredFeature <http://lv2plug.in/ns/ext/urid#map> ;

  lv2:port [
      a lv2:InputPort, lv2:AudioPort ;
      lv2:index 0 ;
      lv2:symbol "inputL" ;
      lv2:name "Audio Input L" ;
  ] , [
      a lv2:InputPort, lv2:AudioPort ;
      lv2:index 1 ;
      lv2:symbol "inputR" ;
      lv2:name "Audio Input R" ;
  ] , [
      a lv2:OutputPort, lv2:AudioPort ;
      lv2:index 2 ;
      lv2:symbol "outputL" ;
      lv2:name "Audio Output Left" ;
  ] , [
      a lv2:OutputPort, lv2:AudioPort ;
      lv2:index 3 ;
      lv2:symbol "outputR" ;
      lv2:name "Audio Output Right" ;
  ] , [
      a lv2:InputPort, lv2:ControlPort ;
      lv2:index 4 ;
      lv2:name "Width" ;
      lv2:symbol "width" ;
      lv2:default 0.500000 ;
      lv2:minimum 0.000000 ;
      lv2:maximum 1.000000 ;
  ] , [
      a lv2:InputPort, lv2:ControlPort ;
      lv2:index 5 ;
      lv2:name "Invert" ;
      lv2:symbol "invert" ;
      lv2:default 0.000000 ;
      lv2:minimum 0.000000 ;
      lv2:maximum 1.000000 ;
  ] , [
      a lv2:InputPort, lv2:ControlPort ;
      lv2:index 6 ;
      lv2:name "Active" ;
      lv2:symbol "active" ;
      lv2:default 1.000000 ;
      lv2:minimum 0.000000 ;
      lv2:maximum 1.000000 ;
  ]
  ,
  [
    a lv2:InputPort ,
      atom:AtomPort ;
    atom:bufferType atom:Sequence ;
    atom:supports time:Position ;
    lv2:index 7 ;
    lv2:symbol "control" ;
    lv2:name "Control"
  ]
.
