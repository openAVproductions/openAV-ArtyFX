@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix epp: <http://lv2plug.in/ns/ext/port-props#> .
#@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.
@prefix mod: <http://portalmod.com/ns/modgui#>.

#<http://www.openavproductions.com/artyfx#filta/gui>
#  a ui:X11UI;
#  ui:binary <filta_ui.so>;
#  ui:requiredFeature ui:makeResident.

<http://portalmod.com/plugins/artyfx/filta>
  a lv2:Plugin ,
    lv2:FilterPlugin ;
  doap:name "Filta";
  doap:developer [ 
      foaf:homepage <http://openavproductions.com/artyfx/>; 
      foaf:mbox <mailto:harryhaaren@gmail.com>;
      foaf:name "Harry van Haaren" 
  ];
  doap:maintainer [ 
      foaf:homepage <http://portalmod.com>;
      foaf:mbox <mailto:devel@portalmod.com>;
      foaf:name "MOD Team" 
  ];

  lv2:optionalFeature lv2:hardRTCapable ;
 
lv2:microVersion 0;
lv2:minorVersion 0;

#ui:ui <http://www.openavproductions.com/artyfx#filta/gui>;

rdfs:comment """
Filta is a highpass / lowpass filter combo. Working on a trance build, or just need some frequencies gone? Filta is the tool for the job, one dial for flexibilty but keeping simplicity!

source: http://openavproductions.com/artyfx/
""";
  
  lv2:port [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 0 ;
    lv2:symbol "in_left" ;
    lv2:name "In Left";
  ] , [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 1 ;
    lv2:symbol "in_right" ;
    lv2:name "In Right";
  ] , [
    a lv2:AudioPort ,
      lv2:OutputPort ;
    lv2:index 2 ;
    lv2:symbol "out_left" ;
    lv2:name "Output Left";
  ] , [
    a lv2:AudioPort ,
      lv2:OutputPort ;
    lv2:index 3 ;
    lv2:symbol "out_right" ;
    lv2:name "Output Right";
  ]
  
  ,
  
  [
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 4 ;
    lv2:symbol "frequency_control" ;
    lv2:name "Frequency Control";
    lv2:default 0.5 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
  ] , [
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 5 ;
    lv2:symbol "active" ;
    lv2:name "Active";
    lv2:default 0.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
  ];
  mod:gui [
    a mod:Gui;
    mod:resourcesDirectory <modgui>;
    mod:iconTemplate <modgui/icon-filta.html>;
    mod:templateData <modgui/data-filta.json>;
    mod:screenshot <modgui/screenshot-filta.png>;
    mod:thumbnail <modgui/thumb-filta.png>;
  ] .