@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix epp: <http://lv2plug.in/ns/ext/port-props#> .

# This is a custom extension, which allows us to tag things easily later
@prefix ui: <http://lv2plug.in/ns/extensions/ui#>.

<http://www.openavproductions.com/cutoff/gui>
  a ui:X11UI;
  ui:binary <cutoff_gui.so>;
  ui:requiredFeature ui:makeResident.

<http://www.openavproductions.com/cutoff>
  a lv2:Plugin ,
    lv2:FilterPlugin ;
  doap:name "Cutoff";
  doap:maintainer <http://www.openavproductions.com/> ;
  lv2:optionalFeature lv2:hardRTCapable ;
  
  ui:ui <http://www.openavproductions.com/cutoff/gui>;
  
  lv2:port [
    a lv2:AudioPort ,
      lv2:InputPort ;
    lv2:index 0 ;
    lv2:symbol "in" ;
    lv2:name "In"
  ] ,	[
    a lv2:AudioPort ,
      lv2:OutputPort ;
    lv2:index 1 ;
    lv2:symbol "out" ;
    lv2:name "Out"
  ] ,	[
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 2 ;
    lv2:symbol "type" ;
    lv2:name "Type";
    lv2:portProperty lv2:integer ;
    lv2:scalePoint [ rdfs:label "Lowpass"; rdf:value 0 ] ;
    lv2:scalePoint [ rdfs:label "Highpass"; rdf:value 1 ] ;
    lv2:scalePoint [ rdfs:label "Bandpass"; rdf:value 2 ] ;
    lv2:scalePoint [ rdfs:label "Low shelf"; rdf:value 3 ] ;
    lv2:scalePoint [ rdfs:label "High shelf"; rdf:value 4 ] ;
    lv2:default 0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 4.0 ;
  ] ,	[
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 3 ;
    lv2:symbol "frequency" ;
    lv2:name "Frequency";
    lv2:default 1.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
  ] ,	[
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 4 ;
    lv2:symbol "gain" ;
    lv2:name "Gain";
    lv2:default  0.5 ;
    lv2:minimum  0.0 ;
    lv2:maximum  1.0 ;
  ] ,	[
    a lv2:InputPort ,
      lv2:ControlPort ;
    lv2:index 5 ;
    lv2:symbol "q" ;
    lv2:name "Q";
    lv2:default  0.5 ;
    lv2:minimum  0.0 ;
    lv2:maximum  1.0 ;
  ] .
